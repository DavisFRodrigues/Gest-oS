@{
    ViewData["Title"] = "GestaoS";
}
<style>
    #logo {
        margin-top: 150px;
    }
</style>


<div class="text-center">
    <h1 class="display-4"></h1>
    <p>

        <img src="~/images/726bffc9-cb4e-4eb7-8920-019e3df262ee_200x200.png" id="logo"/>
    </p>
</div>

<div class="modal fade" id="myModalUser" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div id="ConteudoModal">

                    @Html.Raw(TempData["msgUsuario"])


                </div>

            </div>

        </div>
    </div>
</div>


<script type="text/javascript">

        $(function () {
            if('@TempData["msgUsuario"]' != "") {
                $('#myModalUser').modal('show');
            }
        });

</script>


