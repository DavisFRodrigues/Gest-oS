@model GestaoS.Models.Devolucao

@{
    ViewData["Title"] = "Delete";
}


<h3>Tem certeza que deseja apagar este registro?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">
            Id Locação
        </dt>
        <dd class = "col-sm-11">
            @Html.DisplayFor(model => model.IdLocaEquipamento)
        </dd>
        <dt class = "col-sm-3">
            Equipamento
        </dt>
        <dd class = "col-sm-11">
            @Html.DisplayFor(model => model.NomeEquipamento)
        </dd>
        <dt class = "col-sm-3">
            Patrimonio
        </dt>
        <dd class = "col-sm-11">
            @Html.DisplayFor(model => model.NmPatrimonio)
        </dd>
        <dt class = "col-sm-3">
            Data Início
        </dt>
        <dd class = "col-sm-11">
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt class = "col-sm-3">
            Data Fim
        </dt>
        <dd class = "col-sm-11">
            @Html.DisplayFor(model => model.DataFim)
        </dd>
        <dt class = "col-sm-3">
            Nome
        </dt>
        <dd class = "col-sm-11">
            @Html.DisplayFor(model => model.NomeCompleto)
        </dd>
        <dt class = "col-sm-3">
            Devolvido
        </dt>
        <dd class = "col-sm-11">
            @Html.DisplayFor(model => model.Devolvido)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index"><i class="fa fa-rotate-left fa-fw" aria-hidden="true"></i>Voltar a lista</a>
    </form>
</div>
