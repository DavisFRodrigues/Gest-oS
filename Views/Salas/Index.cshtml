@model IEnumerable<GestaoS.Models.ViewModel.SalaViewModel>

@{
    ViewData["Title"] = "Index";
}
<style>
    .table {
        white-space: nowrap;
        font-size: 14px;
    }
</style>

<h1>Salas</h1>

<p>
    <a asp-action="Create">Novo cadastro</a>
</p>
<table id="tabela" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacidade)
            </th>
            <th>
                Filial
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Multimidia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wifi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdFilial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Multimidia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wifi)
                </td>
                <td>
                    <a class="btn btn-warning btnEdit btn-sm" data-value="@item.IdSala"><i class="fa fa-pencil-square-o fa-fw" aria-hidden="true"></i></a> |
                    <a class="btn btn-danger btnDelete btn-sm" data-value="@item.IdSala"><i class="fa fa-trash fa-fw" aria-hidden="true"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="ExemploModalCentralizado" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div id="ConteudoModal">



                </div>

            </div>

        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            console.log("Iniciou");
            $(".btnEdit").click(function () {

                var id = $(this).data("value");

                console.log(id);

                $('#ConteudoModal').load('/Salas/Edit/' + id, function () {

                    $('#ExemploModalCentralizado').modal();

                });



            });
        });



    </script>
    <script type="text/javascript">

        $(document).ready(function () {
            console.log("Iniciou");
            $(".btnDelete").click(function () {

                var id = $(this).data("value");

                console.log(id);

                $('#ConteudoModal').load('/Salas/Delete/' + id, function () {

                    $('#ExemploModalCentralizado').modal();

                });



            });
        });



    </script>


    <script type="text/javascript">

        $(document).ready(function () {

            $('#tabela').dataTable({

                "bJQueryUI": true,
                "oLanguage": {
                    "sProcessing": "Processando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "Não foram encontrados resultados",
                    "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando de 0 até 0 de 0 registros",
                    "sInfoFiltered": "",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "Primeiro",
                        "sPrevious": "Anterior",
                        "sNext": "Seguinte",
                        "sLast": "Último"
                    }
                }

            });
        });


    </script>
}