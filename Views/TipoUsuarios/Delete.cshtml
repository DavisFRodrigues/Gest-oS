@model GestaoS.Models.TipoUsuario

@{
    ViewData["Title"] = "Deletar";
}



<h3>Tem certeza que desejar apagar este registro?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Perfil
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeTipoUsuario)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index"><i class="fa fa-rotate-left fa-fw" aria-hidden="true"></i>Voltar a lista</a>
    </form>
</div>
